{
  "editor.formatOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/node_modules": true,
    ".{dev,shadowenv.d}": true
  },
  "javascript.validate.enable": false,
  "prettier.eslintIntegration": true,
  "prettier.stylelintIntegration": true,
  "search.exclude": {
    "**/node_modules": true
  },
  "typescript.tsdk": "./node_modules/typescript/lib"
}
